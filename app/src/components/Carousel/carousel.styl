.carousel
  height: 95vh
  display: flex
  flex-direction: column
  align-items: center
  margin: 1em 0
  @media screen and (max-device-width: 600px)
    flex-direction: row
    height: 20vh
    // width: 95vh
    background-color: black
    margin: 0
    box-shadow: 0 -5em 10em black
  &-buttons
    font-size: 2em
    margin: 0.5em
    z-index: 100
    color: white
    @media screen and (max-device-width: 600px)
      margin: 1em
      transform: rotate(-90deg)
    &-icon
      font-size: 1.5em
      @media screen and (max-device-width: 600px)
        font-size: 2.5em
      &:hover
        color: #DFEC51
        cursor: pointer
  &-slides
    z-index: 98
    overflow: hidden
    &-slides
      margin: auto
      display: flex
      align-items: center
      flex-direction: column
      flex-wrap: nowrap
      @media screen and (max-device-width: 600px)
        flex-direction: row
