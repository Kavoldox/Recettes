@require "app/styles/charte"

#app
  font-family: 'Fira Sans', sans-serif

  &-main
    background:  linear-gradient(to top, rgba(20,20,20,1) 30%, rgba(20,20,20,0.9) 60%, rgba(20,20,20,0) 90%)
    @media screen and (max-device-width: 768px)
      background:  linear-gradient(to top, #141414 60%, rgba(20,20,20,0.9) 80%, rgba(20,20,20,0) 100%)
    &-title
      float: left
      color: #DFEC51
      font-size: 2em
      padding: 0.5em
      font-family: 'Pacifico', cursive
      @media screen and (max-device-width: 768px)
        padding: 1em
        font-size: 3em
    &-pres
      height: 100vh
      padding: 8em 1em 1em 5em
      background:  linear-gradient(to left, rgba(20,20,20,1) 25%, rgba(20,20,20,0) 45%, rgba(20,20,20,1) 90%)
      @media screen and (max-device-width: 768px)
        padding: 10em 3em
        background: linear-gradient(to left, #141414 10%, rgba(20,20,20,0) 40%, #141414 100%)
      @media screen and (min-device-width: 769px) and (max-device-width: 1024px)
        background: linear-gradient(to left, #141414 30%, rgba(20,20,20,0) 55%, #141414 100%)
        padding: 6em 3em
    &-carousel
      position: fixed
      top: 0
      right: 5em
      background: #14
      @media screen and (max-device-width: 768px)
        position: fixed
        bottom: 0
        top: auto
        left: 0
        right: auto
        width: 100vw
      @media screen and (min-device-width: 769px) and (max-device-width: 1024px)
        right: 2em
