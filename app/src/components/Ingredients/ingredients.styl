/*
 * Vars
 */
$white = #FFF
$green = #DFEC51

/*
 * Classes
 */
.ingredient
  display: flex
  flex-direction: column
  align-items: flex-start
  margin: 0.5em 0
  @media screen and (max-device-width: 768px)
    padding: 0.2em
    margin: 1em
    max-width: 28%
    line-height: 2.5em

  &-name
    font-size: 1em
    color: white
    text-transform: capitalize
    @media screen and (max-device-width: 768px)
      font-size: 2em

  &-quantity
    font-size: 2em
    color: $green
    margin: 0.5em 0
    text-transform: capitalize
    @media screen and (max-device-width: 768px)
      font-size: 2.5em
    @media screen and (min-device-width: 769px) and (max-device-width: 1024px)
      font-size: 2em

/*
 * IDs
 */
#ingredient
  padding: 3em 0 5em
  margin-right: 5em
  @media screen and (max-device-width: 768px)
    margin-right: 0
  @media screen and (min-device-width: 769px) and (max-device-width: 1024px)
    margin-right: 2em
    width: 30%

  &-menu
    display: flex
    align-items: center
    border-top: 3px solid #DFEC51
    padding: 1em
    @media screen and (max-device-width: 768px)
      width: 50%

  &-title
    // width: 15%
    font-size: 3em
    color: white
    margin-right: 0.5em
    text-transform: uppercase
    // border-bottom: 5px solid $green
    @media screen and (max-device-width: 768px)
      margin: 0.5em
    @media screen and (min-device-width: 769px) and (max-device-width: 1024px)
      font-size: 1.5em

#ingredients
  position: relative
  top: -50em
  margin: 0.5em
  display: flex
  flex-direction: column
  flex-wrap: wrap
  justify-content: flex-start
  overflow-y: hidden
  height: 0
  @media screen and (max-device-width: 768px)
    flex-direction: row
